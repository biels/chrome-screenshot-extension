{
  "name": "Screenshot Extension v2",
  "description": "Take a screenshot of the current page",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "service_worker": "background.js"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Make this page red"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "<all_urls>",
    "tabs"

  ]
}
